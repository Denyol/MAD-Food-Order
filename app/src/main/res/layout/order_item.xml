<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/orderRestIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hungry_mike"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/RoundedCorner"/>

    <TextView
        android:id="@+id/orderRestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:text="Restaurant Name"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/orderRestIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:text="subtitle"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/orderRestIcon"
        app:layout_constraintTop_toBottomOf="@+id/orderRestTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>